name: ubuntu:22.04

concurrency:
  group: {% raw %}${{ github.workflow }}-${{ github.ref }}{% endraw %}
  cancel-in-progress: true

on:
  push:
    branches:
      - "*"
  schedule:
    - cron: "0 0 * * *"
  workflow_dispatch: {}

env:
  DEBIAN_FRONTEND: noninteractive

jobs:
{% for package in packages %}
  {{ package | replace("/", "-") }}:
    runs-on: ubuntu-latest
    name: {{ package }}

    container:
      image: ubuntu:22.04
      volumes:
        - /proc:/proc
      options: --privileged

    steps:
      - name: Pull changes ‚¨áÔ∏è
        uses: actions/checkout@v3

      - name: Install dependencies ‚¨áÔ∏è
        run: |
          apt-get update
          apt-get install -y git python3-yaml

      - name: Build {{ package }} üî®
        run: |
          ./builder \
            --distro ubuntu:22.04 \
            --package {{ package }}
{% endfor -%}
